<div class="col-md-4 mx-auto">
	<div class="card">
		<div class="card-header">
			<h3 class="text-center">Edita la nota</h3>
		</div>
		<div class="card-body">
			<form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
				<input type="hidden" name="_method" value="PUT" />
				<div class="mb-3">
					<input
						type="text"
						name="title"
						class="form-control"
						placeholder="Titulo"
						value="{{note.title}}"
					/>
				</div>
				<div class="mb-3">
					<textarea
						name="description"
						class="form-control"
						placeholder="DescripciÃ³n"
					>
						{{note.description}}
					</textarea>
				</div>
				<div class="mb-3">
					<button class="btn btn-primary btn-block" type="submit">
						Editar
					</button>
				</div>
			</form>
		</div>
	</div>
</div>