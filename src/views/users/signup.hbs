<div class="row">
	<div class="col-md-4 mx-auto">
		<div class="card">
			<div class="card-header">
				<h1 class="text-center">Registrarse</h1>
			</div>
			<div class="card-body">
				<form action="/users/signup" method="post">
					<div class="mb-3">
						<input
							type="text"
							name="name"
							class="form-control"
							placeholder="Tu nombre"
							value="{{name}}"
							autofocus
						/>
					</div>
					<div class="mb-3">
						<input
							type="email"
							class="form-control"
							name="email"
							placeholder="Tu correo"
							value="{{email}}"
						/>
					</div>
					<div class="mb-3">
						<input
							type="password"
							name="password"
							placeholder="Tu contraseña"
							class="form-control"
						/>
					</div>
					<div class="mb-3">
						<input
							type="password"
							name="confirmPassword"
							placeholder="Confirma tu contraseña"
							class="form-control"
						/>
					</div>
					<div class="mb-3">
						<button type="submit" class="btn btn-primary">
							Registrarse
						</button>
					</div>
				</form>
				<p>¿Tienes cuenta? -
					<a href="/users/signin">inicia sesión</a></p>
			</div>
		</div>
	</div>
</div>